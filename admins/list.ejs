<%- include ("../_header") %>

  <style>
    p {
      text-align: center !important;
    }
  </style>

  <input id="idadmins2" value="<%=idadmins1%>" readonly hidden>
  <input id="fname_ad2" value="<%=fname_ad1%>" readonly hidden>
  <input id="lname_ad2" value="<%=lname_ad1%>" readonly hidden>
  <input id="phone_ad2" value="<%=phone_ad1%>" readonly hidden>
  <input id="username2" value="<%=username1%>" readonly hidden>
  <input id="password2" value="<%=password1%>" readonly hidden>


  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-md-5 align-self-center">
        <h3 class="page-title">แอดมิน</h3>
        <div class="d-flex align-items-center mt-1">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">แดชบอร์ด</a></li>
              <li class="breadcrumb-item active" aria-current="page">แอดมิน</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <!-- ============================================================== -->
  <!-- End Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- Container fluid  -->
  <!-- ============================================================== -->
  <div class="container-fluid">

    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="d-flex border-bottom title-part-padding align-items-center">
            <div>
              <h4 class="card-title mb-0">แอดมิน</h4>
            </div>
            <div class="ms-auto flex-shrink-0">
              <a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#add-village-modal"><svg
                  xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                  stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                  class="feather feather-plus fill-white feather-sm">
                  <line x1="12" y1="5" x2="12" y2="19"></line>
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>เพิ่มแอดมิน</a>
            </div>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <div id="zero_config_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                <div class="row">
                  <div class="col-sm-12">
                    <table id="zero_config" class="table table-striped table-bordered dataTable" role="grid"
                      aria-describedby="zero_config_info">
                      <thead>
                        <tr role="row">
                          <th class="sorting_asc" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1"
                            aria-sort="ascending" aria-label="Name: activate to sort column descending"
                            style="width: 0px;">ลำดับ</th>
                          <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1"
                            aria-label="Position: activate to sort column ascending" style="width: 0px;">ชื่อ/นามสกุล
                          </th>
                          <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1"
                            aria-label="Position: activate to sort column ascending" style="width: 0px;">เบอร์โทรศัพท์
                          </th>
                          <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1"
                            aria-label="Position: activate to sort column ascending" style="width: 0px;">ชื่อผู้ใช้งาน
                          </th>
                          <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1"
                            aria-label="Position: activate to sort column ascending" style="width: 0px;">รหัสผ่าน</th>
                          <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1"
                            aria-label="Office: activate to sort column ascending" style="width: 0px;">แสดง</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%if(admin){%>
                          <% for(var i=0; i<admin.length;i++ ){ %>
                            <tr>
                              <td>
                                <%= i+1 %>
                              </td>
                              <td>
                                <%= admin[i].fname_ad%>
                                  <%= admin[i].lname_ad%>
                              </td>
                              <td>
                                <%= admin[i].phone_ad%>
                              </td>
                              <td>
                                <%= admin[i].username%>
                              </td>
                              <td>
                                <%= admin[i].password%>
                              </td>
                              <td>
                                <div class="btn-group">
                                  <a id="<%= admin[i].idadmins%>" href="#" onclick="editadmin(this.id)"
                                    class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#edit-admin-modal"><i
                                      class="fas fa-pencil-alt fa-x"></i>
                                    แก้ไขข้อมูล</a>
                                  <a id="<%= admin[i].idadmins%>" href="#" onclick="deleteadmin(this.id)"
                                    class="btn btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#delete-admin-modal"><i class="fas fa-trash-alt fa-x"></i>
                                    ลบข้อมูล</a>
                                </div>

                              </td>
                            </tr>
                            <%}%>
                              <%}%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <form action="/admin/save" method="POST">
    <div id="add-village-modal" class="modal fade" tabindex="-1" aria-labelledby="bs-example-modal-md"
      style="display: none;" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header d-flex align-items-center border-bottom">
            <h4 class="modal-title" id="myModalLabel">เพิ่มแอดมิน</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body mb row">
            <label for="fname" class="col-sm-3  text-start control-label col-form-label"> ชื่อ:</label>
            <div class="col-sm-9">
              <input type="text" name="fname_ad" placeholder="กรอกชื่อแอดมิน" class="form-control" required>
            </div>
            <br><br>
            <label for="fname" class="col-sm-3 text-start control-label col-form-label"> นามสกุล:</label>
            <div class="col-sm-9">
              <input type="text" name="lname_ad" placeholder="กรอกนามสกุลแอดมิน" class="form-control" required>
            </div>
            <br><br>
            <label for="fname" class="col-sm-3 text-start control-label col-form-label"> เบอร์โทรศัพท์:</label>
            <div class="col-sm-9">
              <input type="text" name="phone_ad" placeholder="กรอกเบอร์โทรศัพท์แอดมิน" maxlength="10" minlength="10"
                class="form-control" required>
            </div>
            <br><br>
            <label for="fname" class="col-sm-3 text-start control-label col-form-label"> ชื่อผู้ใช้งาน:</label>
            <div class="col-sm-9">
              <input type="text" name="username" placeholder="กรอกชื่อผู้ใช้งาน" class="form-control" required>
            </div>
            <br><br>
            <label for="fname" class="col-sm-3 text-start control-label col-form-label"> รหัสผ่าน:</label>
            <div class="col-sm-9">
              <input type="text" name="password" placeholder="กรอกรหัสผ่าน" class="form-control" required>
            </div>
          </div>
          <div class="modal-footer justify-content-center">
            <button type="submit" class="btn btn-success font-weight-medium waves-effect">บันทึกข้อมูล</button>
            <button type="button" class="btn btn-secondary font-weight-medium waves-effect"
              data-bs-dismiss="modal">ปิด</button>
          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
  </form>

  <form action="/admin/update" method="POST">
    <div id="edit-admin-modal" class="modal fade" tabindex="-1" aria-labelledby="bs-example-modal-md"
      style="display: none;" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header d-flex align-items-center border-bottom">
            <h4 class="modal-title" id="myModalLabel">แก้ไขหมู่บ้าน</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body mb row" id="editadmin">

          </div>
          <div class="modal-footer justify-content-center">
            <button type="submit" class="btn btn-warning font-weight-medium waves-effect">แก้ไขข้อมูล</button>
            <button type="button" class="btn btn-secondary font-weight-medium waves-effect"
              data-bs-dismiss="modal">ปิด</button>
          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
  </form>

  <form action="/admin/delete" method="POST">
    <div id="delete-admin-modal" class="modal fade" tabindex="-1" aria-labelledby="bs-example-modal-md"
      style="display: none;" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header d-flex align-items-center border-bottom">
            <h4 class="modal-title" id="myModalLabel">ลบข้อมูลหมู่บ้าน</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body mb row" id="deleteadmin">

          </div>
          <div class="modal-footer justify-content-center">
            <button type="submit" class="btn btn-danger font-weight-medium waves-effect">ยืนยัน</button>
            <button type="button" class="btn btn-secondary font-weight-medium waves-effect"
              data-bs-dismiss="modal">ปิด</button>
          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
  </form>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#zero_config').DataTable();
    });
  </script>

  <script>

    function editadmin(id) {
      const idadmins3 = document.getElementById("idadmins2").value
      const fname_ad3 = document.getElementById('fname_ad2').value
      const lname_ad3 = document.getElementById('lname_ad2').value
      const phone_ad3 = document.getElementById('phone_ad2').value
      const username3 = document.getElementById('username2').value
      const password3 = document.getElementById('password2').value

      let sort_idadmins1 = idadmins3.split(',')
      let sort_fname_ad1 = fname_ad3.split(',')
      let sort_lname_ad1 = lname_ad3.split(',')
      let sort_phone_ad1 = phone_ad3.split(',')
      let sort_username1 = username3.split(',')
      let sort_password1 = password3.split(',')

      let obj = []
      var editadmin = document.getElementById("editadmin");
      for (i in sort_idadmins1) {
        obj.push({ "idadmins": sort_idadmins1[i], "fname_ad": sort_fname_ad1[i], "lname_ad": sort_lname_ad1[i], "phone_ad": sort_phone_ad1[i], "username": sort_username1[i], "password": sort_password1[i] })
      }

      for (j in obj) {
        if (id == obj[j].idadmins) {
          editadmin.innerHTML = '<label for="fname" class="col-sm-3 text-start control-label col-form-label"> ชื่อ:</label>'
            + '<div class="col-sm-9"> <input type="text" name="fname_ad" value="' + obj[j].fname_ad + '" class="form-control" required></div><br><br>'
            + '<label for="fname" class="col-sm-3 text-start control-label col-form-label"> นามสกุล:</label>'
            + '<div class="col-sm-9"> <input type="text" name="lname_ad" value="' + obj[j].lname_ad + '" class="form-control" required></div><br><br>'
            + '<label for="fname" class="col-sm-3 text-start control-label col-form-label"> เบอร์โทรศัพท์:</label>'
            + '<div class="col-sm-9"> <input type="text" name="phone_ad" value="' + obj[j].phone_ad + '" class="form-control" maxlength="10" minlength="10" required></div><br><br>'
            + '<label for="fname" class="col-sm-3 text-start control-label col-form-label"> ชื่อผู้ใช้งาน:</label>'
            + '<div class="col-sm-9"> <input type="text" name="username" value="' + obj[j].username + '" class="form-control" required></div><br><br>'
            + '<label for="fname" class="col-sm-3 text-start control-label col-form-label"> รหัสผ่าน:</label>'
            + '<div class="col-sm-9"> <input type="text" name="password" value="' + obj[j].password + '" class="form-control" required></div><br><br>'
            + '<input type="hidden" name="idadmins" value="' + obj[j].idadmins + '" readonly>'
        }
      }
    }

    function deleteadmin(id) {
      const idadmins3 = document.getElementById("idadmins2").value
      const fname_ad3 = document.getElementById('fname_ad2').value
      const lname_ad3 = document.getElementById('lname_ad2').value
      const phone_ad3 = document.getElementById('phone_ad2').value
      const username3 = document.getElementById('username2').value
      const password3 = document.getElementById('password2').value

      let sort_idadmins1 = idadmins3.split(',')
      let sort_fname_ad1 = fname_ad3.split(',')
      let sort_lname_ad1 = lname_ad3.split(',')
      let sort_phone_ad1 = phone_ad3.split(',')
      let sort_username1 = username3.split(',')
      let sort_password1 = password3.split(',')

      let obj = []
      var deleteadmin = document.getElementById("deleteadmin");
      for (i in sort_idadmins1) {
        obj.push({ "idadmins": sort_idadmins1[i], "fname_ad": sort_fname_ad1[i], "lname_ad": sort_lname_ad1[i], "phone_ad": sort_phone_ad1[i], "username": sort_username1[i], "password": sort_password1[i] })
      }

      for (j in obj) {
        if (id == obj[j].idadmins) {
          deleteadmin.innerHTML = '<p>ต้องการลบแอดมิน ' + obj[j].fname_ad + " " + obj[j].lname_ad + ' ? </p>'
            + '<input type="hidden" name="idadmins" value="' + obj[j].idadmins + '" readonly>'
        }
      }

    }

  </script>

  <%- include ("../_footer") %>