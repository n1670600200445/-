    <script>
        const check_flowhidden = document.getElementById('forms_type')
        const label_flowform = document.querySelector('.label_flowform')
        const flow_form = document.querySelector('.chang_flowform')
        const select_flowform = document.getElementById('select_flowform')

        check_flowhidden.addEventListener('change', function () {
            if (check_flowhidden.value === '1') {
                label_flowform.style.display = 'block';
                flow_form.style.display = 'block';
                select_flowform.required = true;
            } else {
                label_flowform.style.display = 'none';
                flow_form.style.display = 'none';
                select_flowform.required = false;
            }
        });
    </script>

    <script>
        const download_qr = (self) => {
            self.href = document.getElementById("imageQRCODE").src
        }
        function qrcodegen_form(id, name) {
            $.ajax({
                url: '/forms/qrcode',
                type: 'POST',
                data: { id, urldomain: window.location.origin },
                success: (data) => {
                    $('#imageQRCODE').attr('src', data.src);
                    $('#d_qr').attr('download', name + ".png")
                }
            })
        }

        function editforms(id) {
            $.ajax({
                url: '/forms/edit',
                type: 'POST',
                data: { id },
                success: (data) => {
                    $('#edit_idforms').val(data.forms[0].idforms)
                    $('#edit_name_forms').val(data.forms[0].name_forms)
                    $('#edit_forms_type').val(data.forms[0].forms_type)
                    console.log(data.forms[0].flow_forms);
                    $('#edit_flow_forms').val(data.forms[0].flow_forms)
                    $('#edit_detail_forms').val(data.forms[0].detail_forms)
                }
            });
        }

        function deleteforms(id) {
            $.ajax({
                url: '/forms/check',
                type: 'POST',
                data: { id },
                success: (data) => {
                    console.log(data);
                    $('#delete_name_forms').text(`ต้องการลบแบบฟอร์ม ` + data.forms[0].name_forms + ` ?`)
                    $('#delete_idforms').val(data.forms[0].idforms)
                }
            });
        }

    </script>

