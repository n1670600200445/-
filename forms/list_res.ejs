<%- include ("../_header") %>

    <style>
        p {
            text-align: center !important;
        }
    </style>


    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-md-5 align-self-center">
                <h3 class="page-title">แบบฟอร์ม</h3>
                <div class="d-flex align-items-center mt-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">แดชบอร์ด</a></li>
                            <li class="breadcrumb-item active" aria-current="page">แบบฟอร์ม</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="d-flex border-bottom title-part-padding align-items-center">
                        <div>
                            <h4 class="card-title mb-0">แบบฟอร์ม</h4>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <div id="zero_config_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="zero_config" class="table table-striped table-bordered dataTable"
                                            role="grid" aria-describedby="zero_config_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting_asc" tabindex="0" aria-controls="zero_config"
                                                        rowspan="1" colspan="1" aria-sort="ascending"
                                                        aria-label="Name: activate to sort column descending"
                                                        style="width: 0px;">ลำดับ</th>
                                                    <th class="sorting" tabindex="0" aria-controls="zero_config"
                                                        rowspan="1" colspan="1"
                                                        aria-label="Position: activate to sort column ascending"
                                                        style="width: 0px;">ชื่อแบบฟอร์ม
                                                    </th>

                                                    <th class="sorting" tabindex="0" aria-controls="zero_config"
                                                        rowspan="1" colspan="1"
                                                        aria-label="Position: activate to sort column ascending"
                                                        style="width: 0px;">ประเภทของฟอร์ม
                                                    </th>
                                                    <th class="sorting" tabindex="0" aria-controls="zero_config"
                                                        rowspan="1" colspan="1"
                                                        aria-label="Position: activate to sort column ascending"
                                                        style="width: 0px;">วันที่สร้าง
                                                    </th>
                                                    <th class="sorting" tabindex="0" aria-controls="zero_config"
                                                        rowspan="1" colspan="1"
                                                        aria-label="Position: activate to sort column ascending"
                                                        style="width: 0px;">รายละเอียดของฟอร์ม
                                                    </th>
                                                    <th class="sorting" tabindex="0" aria-controls="zero_config"
                                                        rowspan="1" colspan="1"
                                                        aria-label="Office: activate to sort column ascending"
                                                        style="width: 0px;">แสดง</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <%if(forms){%>
                                                    <% for(var i=0; i<forms.length;i++ ){ %>
                                                        <tr>
                                                            <td>
                                                                <%= i+1 %>
                                                            </td>
                                                            <td>
                                                                <%= forms[i].name_forms%>
                                                            </td>
                                                            <td>
                                                                <%= forms[i].name_forms_type%>
                                                            </td>
                                                            <td>
                                                                <%= forms[i].datecreate_f%>
                                                            </td>
                                                            <td>
                                                                <%= forms[i].detail_forms%>
                                                            </td>
                                                            <td>
                                                                <div class="btn-group">
                                                                    <a  href="/forms_res/findvalue_res<%=forms[i].idforms%>"
                                                                    class="btn btn-info"><i class="bi bi-file-earmark-richtext-fill"></i> ดูข้อมูลตอบกลับ</a>
                                                                </div>

                                                            </td>
                                                        </tr>
                                                        <%}%>
                                                            <%}%>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <%- include ("../_footer") %>