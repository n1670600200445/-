<%- include ("../_header") %>
  <style>
    p {
      text-align: center !important;
    }
  </style>
  <link rel="stylesheet" href="/assets/libs/select2/dist/css/select2.min.css">

  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-md-5 align-self-center">
        <h3 class="page-title">รายชื่อเจ้าหน้าที่ในกลุ่ม</h3>
        <div class="d-flex align-items-center">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/index">แดชบอร์ด</a></li>
              <li class="breadcrumb-item"><a href="/group_personnel">กลุ่ม</a></li>
              <li class="breadcrumb-item active" aria-current="page">รายชื่อเจ้าหน้าที่ในกลุ่ม</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="d-flex border-bottom title-part-padding align-items-center">
            <div>
              <h4 class="card-title mb-0">รายชื่อเจ้าหน้าที่ในกลุ่ม</h4>
            </div>
            <div class="ms-auto flex-shrink-0">
              <a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#add-member-modal"><svg
                  xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                  stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                  class="feather feather-plus fill-white feather-sm">
                  <line x1="12" y1="5" x2="12" y2="19"></line>
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>เพิ่มเจ้าหน้าที่เข้ากลุ่ม</a>
            </div>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <div id="zero_config_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                <div class="row">
                  <div class="col-sm-12">
                    <table id="zero_config" class="table table-striped table-bordered dataTable" role="grid"
                      aria-describedby="zero_config_info">
                      <thead>
                        <tr role="row">
                          <th class="sorting_asc" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1"
                            aria-sort="ascending" aria-label="Name: activate to sort column descending"
                            style="width: 0px;">ลำดับ</th>
                          <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1"
                            aria-label="Position: activate to sort column ascending" style="width: 0px;">ชื่อ/นามสกุล
                          </th>
                          <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1"
                            aria-label="Position: activate to sort column ascending" style="width: 0px;">เบอร์โทรศัพท์
                          </th>
                          <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1"
                          aria-label="Position: activate to sort column ascending" style="width: 0px;">หน่วยงาน
                        </th>
                          <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1"
                            aria-label="Office: activate to sort column ascending" style="width: 0px;">แสดง</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%if(user_ingroup){%>
                          <% for(var i=0; i<user_ingroup.length;i++ ){ %>
                            <tr>
                              <td>
                                <%= i+1 %>
                              </td>
                              <td>
                                <%= user_ingroup[i].fname_ps%> <%= user_ingroup[i].lname_ps%>
                              </td>
                              <td>
                                <%= user_ingroup[i].phone_ps%>
                              </td>
                              <td>
                                <%= user_ingroup[i].name_pst%>
                              </td>
                                    <td>
                                      <div class="btn-group">
                                        <a id="<%= user_ingroup[i].idpersonnel%>" href="#" onclick="delete_member_ps(this.id)"
                                          class="btn btn-danger" data-bs-toggle="modal"
                                          data-bs-target="#delete-member-modal"><i class="fas fa-trash-alt fa-x"></i>
                                          ลบออกจากกลุ่ม</a>
                                      </div>

                                    </td>
                            </tr>
                            <%}%>
                              <%}%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <form action="/user_member_ps/save" method="POST">
    <div id="add-member-modal" class="modal fade" tabindex="-1" aria-labelledby="bs-example-modal-md"
      style="display: none;" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header d-flex align-items-center">
            <h4 class="modal-title" id="myModalLabel">เพิ่มเจ้าหน้าที่เข้ากลุ่ม</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body mb row">
            <div class="form-group row">
              <label for="fname" class="col-sm-3  text-start control-label col-form-label">
                ค้นหาชื่อเจ้าหน้าที่</label>
              <div class="col-sm-9">
                <input type="hidden" name="idgroup_us" value="<%=idgroup_us%>">
                <input type="text" class="form-control" name="member_name" style="width: 100%;background-color: white;"
                  placeholder="ค้นหาชื่อเจ้าหน้าที่" required>

                <div class="amsify-suggestags-area form-control">
                  <div class="amsify-suggestags-list form-control">
                    <ul class="amsify-list">
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <br><br>
          </div>

          <div class="modal-footer justify-content-center">
            <button type="submit" class="btn btn-success font-weight-medium waves-effect">บันทึกข้อมูล</button>
            <button type="button" class="btn btn-secondary font-weight-medium waves-effect"
              data-bs-dismiss="modal">ปิด</button>
          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
  </form>

  <form action="/user_member_ps/delete" method="POST">
    <div id="delete-member-modal" class="modal fade" tabindex="-1" aria-labelledby="bs-example-modal-md"
      style="display: none;" aria-hidden="true">
      <div class="modal-dialog  modal-lg">
        <div class="modal-content">
          <div class="modal-header d-flex align-items-center border-bottom">
            <h4 class="modal-title" id="myModalLabel">ยืนยันการลบสมาชิกในกลุ่ม</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body mb row">
            <input type="hidden" name="idgroup_us" value="<%=idgroup_us%>">
            <p id="delete_usermm"></p>
            <input type="hidden" id="delete_idusers" name="iduser_mm" class="form-control" required>
          </div>
          <div class="modal-footer justify-content-center">
            <button type="submit" class="btn btn-success font-weight-medium waves-effect">ยืนยัน</button>
            <button type="button" class="btn btn-secondary font-weight-medium waves-effect"
              data-bs-dismiss="modal">ปิด</button>
          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
  </form>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
  <link rel="stylesheet" href="/css/amsify.suggestags.css">
  <script src="/js/jquery.amsify.suggestags.js"></script>
  <script>

    const data = eval('<%- JSON.stringify(user_nogroup) %>')
    let array1 = data.map((key, value) => ({"tag": data[value].fname_ps+' '+data[value].lname_ps, "value": data[value].idpersonnel}))
    
    $('input[name="member_name"]').amsifySuggestags({
      suggestions: array1,
      whiteList: true
    })

    $('div.amsify-suggestags-list').css("width", "542px")


    function delete_member_ps(id){
      $.ajax({
          url: '/user_member_ps/check',
          type: 'POST',
          data: { id },
          success: (data) => {
            const name_mm = data.data[0].fname_ps+' '+data.data[0].lname_ps
            $('#delete_usermm').text(`ต้องการลบ `+name_mm+` ออกจากกลุ่ม ?`)
            $('#delete_idusers').val(data.data[0].idpersonnel)
          }
        });
    }

  </script>

  <%- include ("../_footer") %>