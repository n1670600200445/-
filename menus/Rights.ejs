<%- include ("../_header") %>

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-md-5 align-self-center">
            <h3 class="page-title">สิทธิการรักษา</h3>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">สิทธิการรักษา</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="d-flex border-bottom title-part-padding align-items-center">
                    <div>
                        <h4 class="card-title mb-0">สิทธิการรักษา</h4>
                    </div>
                    <div class="ms-auto flex-shrink-0">
                        <a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#add-Rights-modal"  
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus fill-white feather-sm">
                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                            </svg> เพิ่มสิทธิการรักษา
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <div id="zero_config_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="zero_config" class="table table-striped table-bordered dataTable">
                                        <thead>
                                            <tr>
                                                <th>ลำดับ</th>
                                                <th>ชื่อ</th>
                                                <th>แสดง</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (rights) { %>
                                                <% for (var i = 0; i < rights.length; i++) { %>
                                                    <tr>
                                                        <td><%= i + 1 %></td>
                                                        <td><%= rights[i].name %></td>
                                                        <td>
                                                            <div class="btn-Rights">
                                                                <!-- Corrected the id attribute to use rights[i].id -->
                                                                <a id="edit-<%= rights[i].id %>" href="#" onclick="editgRights('<%= rights[i].id %>')" class="btn btn-warning">
                                                                    <i class="fas fa-pencil-alt fa-x"></i> แก้ไขข้อมูล
                                                                </a>
                                                                <a id="<%= rights[i].id %>" href="#" onclick="deleteRights('<%= rights[i].id %>')" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete-Rights-modal">
                                                                    <i class="fas fa-trash-alt fa-x"></i> ลบข้อมูล
                                                                </a>
                                                                
                                                                
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                                
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<form action="/Rights/save" method="POST">
