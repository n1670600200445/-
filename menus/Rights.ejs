function editgRights(id) {
    console.log('Editing ID:', id); // Log to check ID

    if (!id) {
        console.error('Error: ID is empty or undefined.');
        return;
    }

    console.log('Preparing to send AJAX request with ID:', id);

    $.ajax({
        url: '/Rights/edit',
        type: 'POST',
        data: { id: id }, // Send ID to the server
        success: (data) => {
            console.log('Received data:', data); // Log for debugging
            if (data && data.rights) {
                $('#edit-name-Rights').val(data.rights.name); // Set name in input field
                $('#id').val(data.rights.id); // Set ID from received data
                $('#edit-Rights-modal').modal('show'); // Show modal
            } else {
                console.error('Error: Received data is not in expected format or rights not found.');
            }
        },
        error: (xhr, status, error) => {
            console.error('Error fetching data:', error); // Handle errors
        }
    });
}

